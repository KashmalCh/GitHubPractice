[sqlfluff]
dialect = bigquery
fix_even_unparsable = True
templater = jinja
exclude_rules = L011,L012,L013,L014,L015,L016,L020,L021,L025,L026,L027,L028,L029,L031,L032,L033,L034,L035,L037,L042,L043,L044,L045,L047,L051,L053,L054,L055,L056,L057,L058,L059,L060,L061,L062


[sqlfluff:rules]
tab_space_size = 2

[sqlfluff:rules:L003]
indent_unit = tab

[sqlfluff:rules:L004]
indent_unit = tab

[sqlfluff:rules:L010]
capitalisation_policy = lower

[sqlfluff:rules:L030]
extended_capitalisation_policy = lower

[sqlfluff:rules:L040]
capitalisation_policy = lower

[sqlfluff:rules:L052]
require_final_semicolon = False

[sqlfluff:rules:L063]
extended_capitalisation_policy = lower
